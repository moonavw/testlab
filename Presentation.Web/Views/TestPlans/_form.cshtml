@model TestPlan

<p><a href="javascript:history.back()" class="btn btn-default">Cancel</a></p>

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-horizontal">
    <fieldset>
        <legend>Test Plan</legend>
        <div class="form-group@(Html.ValidationErrorFor(m => m.Name, " has-error"))">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block" })
            </div>
        </div>
        
        <div class="form-group@(Html.ValidationError("TestCases", " has-error"))">
            @Html.Label("TestCases", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("TestCases", new MultiSelectList(Model.Project.Cases.Actives().OrderBy(z=>z.Name), "Id", "Name", Model.Cases.Select(z => z.Id)), new { @class = "form-control listbox" })
                @Html.ValidationMessage("TestCases", null, new { @class = "help-block" })
            </div>
        </div>
    </fieldset>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-default"/>
        </div>
    </div>
</div>
