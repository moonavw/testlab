@model IEnumerable<TestProject>

@{
    ViewBag.Title = "Test Projects";
}

<h2>Test Projects</h2>
<p>
    @Html.ActionLink("Create New", "New", "TestProjects", null, new { @class = "btn btn-default" })
</p>

@Html.Grid(Model.OrderByDescending(z=>z.Id)).Columns(c =>
{
    c.Add()
     .Encoded(false)
     .Sanitized(false)
     .SetWidth(30)
     .RenderValueAs(d =>
                        Html.ActionLink("Open", "Show", "TestProjects", new { id = d.Id }, new { @class = "btn btn-default" })
        );

    c.Add(o => o.Id)
     .SortInitialDirection(GridMvc.Sorting.GridSortDirection.Descending);
    
    c.Add(o => o.Name);

    c.Add(o => o.DriverName);
    
    c.Add(o => o.Plans.Count);

    c.Add(o => o.Cases.Count);

    c.Add(o => o.Sessions.Count);

}).Sortable().Filterable().WithMultipleFilters().WithPaging(20)
