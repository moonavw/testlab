@model TestLab.Domain.TestProject


@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-horizontal">
    <fieldset>
        <legend>TestProject</legend>
        <div class="form-group@(Html.ValidationErrorFor(m => m.Name, " has-error"))">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group@(Html.ValidationErrorFor(m => m.RepoPathOrUrl, " has-error"))">
            @Html.LabelFor(m => m.RepoPathOrUrl, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.RepoPathOrUrl, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RepoPathOrUrl, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group@(Html.ValidationErrorFor(m => m.DriverName, " has-error"))">
            @Html.LabelFor(m => m.DriverName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.DriverName, new SelectList(ViewBag.DriverNames), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DriverName, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group@(Html.ValidationErrorFor(m => m.BuildOutputPath, " has-error"))">
            @Html.LabelFor(m => m.BuildOutputPath, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BuildOutputPath, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BuildOutputPath, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group@(Html.ValidationErrorFor(m => m.BuildScript, " has-error"))">
            @Html.LabelFor(m => m.BuildScript, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BuildScript, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BuildScript, null, new { @class = "help-block" })
            </div>
        </div>
    </fieldset>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-default"/>
        </div>
    </div>
</div>
