@model TestSession

@{
    ViewBag.Title = "Test Session";
}

<div>
    <h2>Test Session</h2>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
    @Html.Partial("_ShowAudit", Model)
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Summary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Summary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Build)
        </dt>

        <dd>
            @Model.Build
        </dd>
    </dl>
</div>
<div>
    <h2>Test Queues</h2>
    @Html.Partial("_TestQueues", Model.Queues.Actives())
</div>
<div>
    <h2>Test Runs</h2>
    @Html.Partial("_ShowProgress", Model)
    @Html.Partial("_TestRuns", Model.Runs)
</div>
