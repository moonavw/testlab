@model TestLab.Domain.TestSession


@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-horizontal">
    <fieldset>
        <legend>TestSession</legend>
        <div class="form-group@(Html.ValidationErrorFor(m => m.Server, " has-error"))">
            @Html.LabelFor(m => m.Server, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Server, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Server, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group@(Html.ValidationErrorFor(m => m.Domain, " has-error"))">
            @Html.LabelFor(m => m.Domain, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Domain, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Domain, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group@(Html.ValidationErrorFor(m => m.UserName, " has-error"))">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group@(Html.ValidationErrorFor(m => m.Password, " has-error"))">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
            </div>
        </div>
    </fieldset>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-default"/>
        </div>
    </div>
</div>
